<section class="hero-banner">
  <style>
    .hero-banner {
        position: relative;
        width: 100%;
        display: flex;
        justify-content: center;
        background-color: #111;
        background-image: url('/assets/grain.jpg');
        background-size: cover;
        background-repeat: repeat;
        background-blend-mode: overlay;
        padding: 1.5rem 0;
        overflow: hidden; /* para el grain */
    }

    .hero-banner::before {
      content: "";
      position: absolute;
      top: 0; left: 0;
      width: 100%;
      height: 100%;
      background-image: url('/assets/grain.png');
      background-size: auto;
      background-repeat: repeat;
      opacity: 0.08;
      z-index: 0;
      pointer-events: none;
    }

    .hero-banner__content {
      max-width: 800px;
      width: 90%;
      height: 100%;
      position: relative;
      z-index: 1;
    }

    .hero-banner__image {
      position: relative;
      width: 100%;
    }

    .hero-banner__image img {
      width: 100%;
      height: auto;
      display: block;
      border-radius: 10px;
    }

    .hero-banner__text {
      position: absolute;
      bottom: 1.5rem;
      left: 1.5rem;
    }

    .hero-banner__cta {
      background-color: #a259ff;
      letter-spacing: 1.5px;
      font-size: 15px;
      color: white;
      padding: 0.5rem 1rem;
      font-weight: bold;
      text-transform: uppercase;
      text-decoration: none;
      border-radius: 5px;
      transition: background 0.3s ease;
    }

    .hero-banner__cta:hover {
      background-color: #7b37d0;
    }

    @media (max-width: 768px) {
      .hero-banner__text {
        bottom: 1rem;
        left: 1rem;
      }

      .hero-banner__cta {
        padding: 0.5rem 1rem;
        font-size: 0.9rem;
      }
    }
  </style>

  <div class="hero-banner__content">
    <div class="hero-banner__image">
      <img src="/assets/hero_banner_img.avif" alt="Shuffle Store Models" />
      <div class="hero-banner__text">
        <strong class="hero-banner__cta">VIEW THE COLLECTION</strong>
      </div>
    </div>
  </div>
</section>
